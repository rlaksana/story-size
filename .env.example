# Story Size Estimator - Environment Variables Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# LLM API Configuration (REQUIRED)
# ============================================================================
# API key for the LLM service (ZAI API or Anthropic-compatible)
ZAI_API_KEY=your_api_key_here

# ============================================================================
# Default Directory Paths (OPTIONAL)
# ============================================================================
# These can be set as defaults to avoid repeating them in commands

# Default directory containing work item documents (specs, requirements, etc.)
DEFAULT_BACKLOG_PATH=D:\path\to\your\specs

# Default code repository path (for auto-detection or forced platforms)
DEFAULT_REPO_PATH=D:\path\to\your\repository

# Platform-specific code directories (for manual platform mode)
DEFAULT_FE_DIR=D:\path\to\frontend\code
DEFAULT_BE_DIR=D:\path\to\backend\code
DEFAULT_MOBILE_DIR=D:\path\to\mobile\code
DEFAULT_DEVOPS_DIR=D:\path\to\devops\code

# Default output directory for generated markdown reports
DEFAULT_OUTPUT_DIR=D:\path\to\output\directory

# Auto-save reports to output directory with generated filename (true/false)
DEFAULT_AUTO_SAVE=false

# ============================================================================
# Configuration Override (OPTIONAL)
# ============================================================================
# Path to custom YAML configuration file (overrides default config.yml)
# CONFIG_PATH=D:\path\to\custom_config.yml
